pipeline {
    agent any
    options {
        buildDiscarder(logRotator(
            numToKeepStr: '5',        // Keep only the latest 5 builds
            artifactNumToKeepStr: '3', // Keep artifacts from the latest 3 builds
            daysToKeepStr: '10',       // Discard builds older than 10 days
            artifactDaysToKeepStr: '7' // Discard artifacts older than 7 days
        ))
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building the project...'
            }
        }
    }
}
